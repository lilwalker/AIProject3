import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

import com.opencsv.CSVReader;
import com.opencsv.CSVWriter;

public class Reader {
	
	String file;
	
	Reader(String name){
		this.file = name;
	}
	
	public void importTestData() throws IOException{
		CSVReader reader = new CSVReader(new FileReader("DataFiles/trainingcsv.csv"));
		reader.readNext();
		new BoardState(reader.readNext());
	}
	
	public void importTestDataRange(int top, int bottom) throws IOException{
		CSVReader reader = new CSVReader(new FileReader("DataFiles/trainingcsv.csv"));
		for (int i=0; i<=top; i++){
			reader.readNext();
		}
		for (int j = top; j<bottom; j++){
			new BoardState(reader.readNext());
		}
	}
	
	public void calculateTestDataRange(int top, int bottom, Feature feature) throws IOException{
		CSVReader reader = new CSVReader(new FileReader(file));
		CSVWriter writer = new CSVWriter(new FileWriter(file));
		for (int i=0; i<=top; i++){
			reader.readNext();
		}
		for (int j = top; j<bottom; j++){
			feature.calculate(new BoardState(reader.readNext()));
		}
	}
	
}
